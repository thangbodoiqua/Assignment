{{!-- compose.hbs --}}
<style>
    
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f3f5;
        margin: 0;
        padding: 0;
    }

    .compose-container {
        display: flex;
        margin-top: 80px;
        padding: 20px;
        gap: 20px; 
    }

    .sidebar {
        width: 250px;
        padding: 20px;
        background-color: #004d99;
        color: #ffffff;
        border-radius: 12px;
        height: calc(100vh - 100px);
        position: sticky;
        top: 80px;
        box-shadow: 3px 0 8px rgba(0, 0, 0, 0.15);
    }

    .sidebar a {
        display: block;
        padding: 12px 15px;
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        border-radius: 8px;
        transition: 0.3s;
        margin-bottom: 10px;
    }

    .sidebar a:hover {
        background-color: #003366;
        transform: scale(1.05);
    }

    .compose-content {
        flex: 1;
        padding: 30px;
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
    }

    .compose-content h2 {
        color: #003366;
        font-size: 1.8em;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px; 
    }

    .form-group label {
        font-weight: 500;
        color: #444;
        display: block;
        margin-bottom: 8px; 
    }

    .form-control {
        width: 100%;
        padding: 12px; 
        border: 1px solid #ddd;
        border-radius: 6px;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #007acc;
        outline: none;
    }

    .success-message,
    .error-message {
        font-weight: 500;
        padding: 12px;
        border-radius: 6px;
        margin-top: 15px;
    }

    .success-message {
        color: #2e7d32;
        background-color: #e8f5e9;
    }

    .error-message {
        color: #c62828;
        background-color: #ffebee;
    }

    button {
        width: 100%;
        padding: 12px;
        color: white;
        background: #0066cc;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 15px; 
    }

    button:hover {
        background-color: #004d99;
        transform: scale(1.03);
    }
</style>

<div class="compose-container">
    <div class="sidebar">
        <a href="/compose">Compose</a>
        <a href="/inbox">Inbox</a>
        <a href="/outbox">Outbox</a>
    </div>
    <div class="compose-content">
        <h2>Compose Email</h2>
        {{#if errorMessage}}
            <div class="error-message">{{errorMessage}}</div>
        {{/if}}
        {{#if successMessage}}
            <div class="success-message">{{successMessage}}</div>
        {{/if}}
        <form action="/compose" method="POST"  enctype="multipart/form-data">
            <div class="form-group">
                <label for="recipient">Recipient:</label>
                <select id="recipient" name="recipient" class="form-control" required>
                    <option value="">Select a recipient</option>
                    {{#each users}}
                        <option value="{{this.id}}">{{this.fullname}} ({{this.email}})</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject" class="form-control" placeholder="(no subject)">
            </div>
            <div class="form-group">
                <label for="body">Email Body:</label>
                <textarea id="body" name="body" class="form-control" rows="8" placeholder="Type your message here..."></textarea>
                <label for="attachment">Attach a file:</label>
        <input type="file" id="attachment" name="attachment" class="form-control">
            </div>
            <button type="submit">Send</button>
        </form>
    </div>
</div>
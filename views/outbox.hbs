<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f3f5;
        margin: 0;
        padding: 0;
    }

    .outbox-container {
        display: flex;
        margin-top: 80px;
        padding: 20px;
        height: calc(100vh - 80px); 
        overflow: hidden; 
    }

    .sidebar {
        width: 250px;
        padding: 20px;
        background-color: #004d99;
        color: #ffffff;
        border-radius: 12px;
        height: 100%;
        position: sticky;
        top: 80px;
        box-shadow: 3px 0 8px rgba(0, 0, 0, 0.15);
    }

    .sidebar a {
        display: block;
        padding: 12px 15px;
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.3s;
        margin-bottom: 10px;
    }

    .sidebar a:hover {
        background-color: #003366;
        transform: scale(1.05);
    }

    .outbox-content {
        flex: 1;
        margin-left: 20px;
        padding: 25px;
        padding-bottom: 60px; 
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        position: relative; 
        overflow-y: auto; 
    }

    .outbox-content h2 {
        color: #003366;
        font-size: 1.8em;
        margin-bottom: 20px;
        border-bottom: 2px solid #eaeaea; 
        padding-bottom: 10px;
    }

    .email-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .email-item {
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        margin-bottom: 15px;
        transition: background-color 0.3s, transform 0.3s;
        display: flex; 
        align-items: center; 
    }

    .email-item:hover {
        cursor: pointer;
        background-color: #f1f1f1;
        transform: scale(1.02);
    }

    .email-item h3 {
        margin: 0;
        color: #004d99;
        font-size: 1.2em; 
        flex: 1; 
    }

    .email-checkbox {
        transform: scale(1.5); 
        margin-right: 15px; 
    }

    .select-all-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .select-all-checkbox {
        transform: scale(1.5); 
        margin-right: 10px; 
    }

    
    .delete-button {
        background-color: #dc3545; 
        color: white;
        border: none;
        padding: 10px 15px; 
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        margin-left: auto; 
        transition: background-color 0.3s;
    }

    .delete-button:hover {
        background-color: #c82333; 
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin: 20px 0 0; 
        padding: 15px 0;
        position: relative; 
        background: #ffffff; 
        border-top: 1px solid #ddd; 
        z-index: 10; 
    }

    .pagination a {
        margin: 0 5px;
        padding: 10px 15px;
        border: 1px solid #007bff;
        color: #007bff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .pagination a:hover {
        background-color: #007bff;
        color: white;
    }

    .pagination a.active {
        background-color: #007bff;
        color: white;
        cursor: default;
    }
</style>

<div class="outbox-container">
    <div class="sidebar">
        <a href="/compose">Compose</a>
        <a href="/inbox">Inbox</a>
        <a href="/outbox">Outbox</a>
    </div>
    <div class="outbox-content">
        <h2>Outbox</h2>
        <div class="select-all-container">
            <input type="checkbox" id="selectAll" class="select-all-checkbox">
            <label for="selectAll">Select All</label>
            <button id="deleteSelectedOutboxBtn" class="delete-button">Delete Selected</button>
        </div>
        <ul class="email-list">
            {{#each emails}}
            <li class="email-item">
                <input type="checkbox" class="email-checkbox" data-email-id="{{this.id}}">
                <a href="/email/{{this.id}}">
                    <h3>{{this.receiver}} - {{this.subject}}</h3>
                    <p><small>Sent on: {{formatDate this.created_at}}</small></p>
                </a>
            </li>
            {{/each}}
        </ul>
        <div class="pagination">
            {{#if prevPage}}
            <a href="/outbox?page={{prevPage}}">Previous</a>
            {{/if}}

            {{#each pages}}
            <a href="/outbox?page={{this}}" class="{{#if (eq this ../page)}}active{{/if}}">{{this}}</a>
            {{/each}}

            {{#if nextPage}}
            <a href="/outbox?page={{nextPage}}">Next</a>
            {{/if}}
        </div>
    </div>
</div>

<script>
document.getElementById('deleteSelectedOutboxBtn').addEventListener('click', async () => {
    const selectedEmails = Array.from(document.querySelectorAll('.email-checkbox:checked')).map(cb => cb.dataset.emailId);
    
    if (selectedEmails.length === 0) {
        alert("Please select at least one email to delete.");
        return;
    }

    const response = await fetch('/delete-emails-outbox', {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ ids: selectedEmails })
    });

    if (response.ok) {
        selectedEmails.forEach(id => {
            document.querySelector(`.email-checkbox[data-email-id="${id}"]`).closest('.email-item').remove();
        });
    } else {
        alert("Failed to delete emails. Please try again.");
    }
});

// Tính năng chọn tất cả
document.getElementById('selectAll').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.email-checkbox');
    checkboxes.forEach(checkbox => {
        checkbox.checked = this.checked;
    });
});
</script>
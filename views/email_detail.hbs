
<link rel="stylesheet" href="/css/email_detail.css">
<div class="email-detail-container">
        {{>sidebar}}

    <div class="email-content">
        <div class="email-header">
            <h2>{{email.subject}}</h2>
            <div class="email-meta">
                <p><strong>From:</strong> {{email.sender_name}}</p>
                <p><strong>Date:</strong> {{formatDate email.created_at}}</p>
            </div>
        </div>

        <div class="email-body">
            {{email.body}}
        </div>

        {{#if email.attachment}}
        <div class="email-attachment">
            <img src="../resources/img/attach_icon.png" alt="Attachment">
            <a href="/uploads/{{email.attachment}}" target="_blank">
                {{email.attachment}}
            </a>
        </div>
        {{/if}}

        <a href="/inbox" class="back-button">Back to Inbox</a>
    </div>
</div>
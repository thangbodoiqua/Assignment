<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f0f3f5;
        margin: 0;
        padding: 0;
    }

    .inbox-container {
        display: flex;
        margin-top: 80px;
        padding: 20px;
    }

    .sidebar {
        width: 250px;
        padding: 20px;
        background-color: #004d99;
        color: #ffffff;
        border-radius: 12px;
        height: calc(100vh - 100px);
        position: sticky;
        top: 80px;
        box-shadow: 3px 0 8px rgba(0, 0, 0, 0.15);
    }

    .sidebar a {
        display: block;
        padding: 12px 15px;
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        border-radius: 8px;
        transition: 0.3s;
        margin-bottom: 10px;
    }

    .sidebar a:hover {
        background-color: #003366;
        transform: scale(1.05);
    }

    .inbox-content {
        flex: 1;
        margin-left: 20px;
        padding: 25px;
        padding-bottom: 60px; /* Thêm padding dưới để tránh che khuất nội dung */
        background: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        position: relative; /* Để sử dụng absolute cho thanh phân trang */
    }

    .inbox-content h2 {
        color: #003366;
        font-size: 1.8em;
        margin-bottom: 20px;
    }

    .email-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .email-item {
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        margin-bottom: 15px;
        transition: background-color 0.3s, transform 0.3s;
    }

    .email-item:hover {
        cursor: pointer;
        background-color: #f1f1f1;
        transform: scale(1.02);
    }

    .email-item h3 {
        margin: 0;
        color: #004d99;
    }

    .email-item p {
        margin: 5px 0;
        color: #555;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 15px 0;
        position: absolute; /* Để giữ cố định trong khối chứa */
        bottom: 0; /* Cố định ở phía dưới */
        left: 0;
        right: 0; /* Giãn ra từ trái sang phải */
        background: #ffffff; /* Nền cho thanh phân trang */
        border-top: 1px solid #ddd; /* Biên trên để phân tách */
        z-index: 10; /* Để đảm bảo nó nổi bật */
    }

    .pagination a {
        margin: 0 5px;
        padding: 10px 15px;
        border: 1px solid #007bff;
        color: #007bff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .pagination a:hover {
        background-color: #007bff;
        color: white;
    }

    .pagination a.active {
        background-color: #007bff;
        color: white;
        cursor: default;
    }
</style>

<div class="inbox-container">
    <div class="sidebar">
        <a href="/compose">Compose</a>
        <a href="/inbox">Inbox</a>
        <a href="/outbox">Outbox</a>
    </div>
    <div class="inbox-content">
        <h2>Inbox</h2>
        <ul class="email-list">
            {{#each emails}}
            <li class="email-item">
                <a href="/email/{{this.id}}">
                    <h3>{{this.sender}} - {{this.subject}}</h3>
                    <p><small>Received on: {{formatDate this.created_at}}</small></p>
                </a>
            </li>
            {{/each}}
        </ul>
        <div class="pagination">
            {{#if prevPage}}
            <a href="/inbox?page={{prevPage}}">Previous</a>
            {{/if}}

            {{#each pages}}
            <a href="/inbox?page={{this}}" class="{{#if (eq this ../page)}}active{{/if}}">{{this}}</a>
            {{/each}}

            {{#if nextPage}}
            <a href="/inbox?page={{nextPage}}">Next</a>
            {{/if}}
        </div>
    </div>
</div>